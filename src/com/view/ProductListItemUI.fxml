<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox style="-fx-background-color: #fff;" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controller.ProductListItemController">
   <children>
      <HBox fx:id="productListItem" alignment="CENTER_LEFT" prefHeight="39.0" prefWidth="967.0">
         <children>
            <Label fx:id="code" prefHeight="25.0" prefWidth="59.0" text="001">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <ImageView fx:id="imgSrc" fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/iphone-13-0-0_3.png" />
                     </image>
                  </ImageView>
                  <Label fx:id="name" prefHeight="25.0" prefWidth="217.0" text="Iphone 13 Pro Max">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Label fx:id="category" prefHeight="25.0" prefWidth="141.0" text="Apple">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label fx:id="importPrice" prefHeight="25.0" prefWidth="140.0" text="4500">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label fx:id="price" prefHeight="26.0" prefWidth="111.0" text="4800">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label fx:id="status" prefHeight="26.0" prefWidth="101.0" text="Lock">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="140.0" spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <ImageView fx:id="view" fitHeight="25.0" fitWidth="25.0" onMouseClicked="#viewProduct" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/ic_eye.png" />
                     </image>
                  </ImageView>
                  <ImageView fx:id="edit" fitHeight="25.0" fitWidth="25.0" onMouseClicked="#editProduct" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/ic_pencil.png" />
                     </image>
                  </ImageView>
                  <StackPane style="-fx-background-color: fff;">
                     <children>
                        <ImageView fx:id="lock" fitHeight="20.0" fitWidth="20.0" onMouseClicked="#lockProduct" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/ic_lock.png" />
                           </image>
                        </ImageView>
                        <ImageView fx:id="unlock" fitHeight="20.0" fitWidth="20.0" onMouseClicked="#unLockProduct" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/ic_unlock.png" />
                           </image>
                           <StackPane.margin>
                              <Insets left="5.0" />
                           </StackPane.margin>
                        </ImageView>
                     </children>
                  </StackPane>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="10.0" />
         </padding>
      </HBox>
      <Separator prefWidth="200.0" />
   </children>
</VBox>
